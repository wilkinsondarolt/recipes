<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <%= image_tag(recipe.photo.url, alt: recipe.title) %>
    </figure>
  </div>

  <div class="card-content has-text-centered">
    <div class="subtitle"><%= recipe.title %></div>
  </div>

  <footer class="card-footer">
    <%= link_to 'View full recipe', recipe_path(recipe.id), class: 'card-footer-item has-text-link' %>
  </footer>
</div>
